{
  "name": "amiibo-webapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material/react-button": "^0.6.1",
    "@material/react-material-icon": "^0.6.1",
    "@material/react-text-field": "^0.6.1",
    "intersection-observer": "^0.5.1",
    "pwacompat": "^2.0.7",
    "react": "^16.7.0-0",
    "react-dom": "^16.7.0-0",
    "react-lazy-img": "^1.0.0",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "^3.1.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules ./src/app.scss -o ./src",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules --watch ./src/app.scss ./src/app.css",
    "start-js": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts-ts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "postbuild": "rm -rf ../docs && mkdir -p ../docs && cp -rv ./build/* ../docs && echo 'amiibo.org' > ../docs/CNAME "
  },
  "devDependencies": {
    "@types/google.analytics": "^0.0.39",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.12.0",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-router-dom": "^4.3.1",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.3",
    "typescript": "^3.1.3"
  }
}
